    public void hasta_goruntule() {
        //çalışan tablosu herseferinde 0'lanır
        model.setRowCount(0);
        
        ArrayList<Hastane_Bilgi> calisanlar = new ArrayList<Hastane_Bilgi>();
        
        
        
        calisanlar = islemler.calisanlariGetir();
        
        if (calisanlar != null ) {
            
            for (Hastane_Bilgi calisan : calisanlar) {
                Object[] eklenecek = {calisan.getId(),calisan.getAd(),calisan.getSoyad(),calisan.getTc(),calisan.getDoktor_adi(),calisan.getRandevu_saati(),calisan.getBolum()};
                
                model.addRow(eklenecek);
                
                
                
            }
            
        }
        
        
    }
